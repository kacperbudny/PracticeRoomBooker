{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "target": "ES2017",
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "./src/api/types"],
    "paths": { "src/*": ["./src/*"] },
    "baseUrl": "./"
  },
  "include": ["src", "*.ts"],
  "lib": ["es2015"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
