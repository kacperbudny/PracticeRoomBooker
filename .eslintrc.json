{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },

  "plugins": ["@typescript-eslint", "prettier", "import"],
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript"
  ],
  "rules": {
    "prettier/prettier": ["warn", { "endOfLine": "auto" }],
    "@typescript-eslint/no-unused-vars": "warn",
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "packages/backend/src/api/",
            "from": "packages/backend/src/domain/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/api/",
            "from": "packages/backend/src/persistence/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/application/",
            "from": "packages/backend/src/api/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/domain/",
            "from": "packages/backend/src/api/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/domain/",
            "from": "packages/backend/src/application/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/domain/",
            "from": "packages/backend/src/persistence/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/persistence/",
            "from": "packages/backend/src/api/",
            "message": "Importing between these layers is forbidden."
          },
          {
            "target": "packages/backend/src/domain/",
            "from": "packages/backend/src/application/",
            "message": "Importing between these layers is forbidden."
          }
        ]
      }
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "packages/*/tsconfig.json"
      }
    }
  }
}
